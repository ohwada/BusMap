<resources>

    <!-- Base application theme. -->
    <style 
        name="AppTheme" 
        parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

<!-- OptionDialog -->
    <style
    	name="Theme.OptionDialog"
    	parent="android:style/Theme.Dialog">   
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@android:color/transparent</item>  
    </style>

<!-- MarkerDialog -->
    <style
        name="Theme.MarkerDialog"
        parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_background_transparent</item>  
    </style>

<!-- RouteDialog -->
    <style
        name="Theme.RouteDialog"
        parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_background_transparent</item>  
    </style>

    <style 
        name="RouteLabel" >
        <item name="android:layout_width">@dimen/route_label_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/route_label_textsize</item> 
        <item name="android:textColor">@color/dialog_text</item>  
    </style> 

    <style 
        name="RouteText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>    
        <item name="android:layout_weight">1</item> 
        <item name="android:textSize">@dimen/route_text_textsize</item>
        <item name="android:textColor">@color/dialog_text</item>  
    </style> 

<!-- ProgressDialog -->
    <style
    	name="Theme.ProgressDialog"
    	parent="android:style/Theme.Dialog">   
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@android:color/transparent</item>  
    </style>

</resources>
